<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- message -->
    <bean id="messageSerializer"
          class="com.h13.slg.cache.service.FastJsonRedisSerializer">
        <constructor-arg type="java.lang.Class" value="com.h13.slg.cache.co.MessageCO"/>
    </bean>
    <bean id="messageCOTemplate" class="org.springframework.data.redis.core.RedisTemplate"
          p:connection-factory-ref="jedisConnectionFactory" p:keySerializer-ref="redisStringRedisSerializer"
          p:valueSerializer-ref="messageSerializer">
    </bean>

    <!-- comment -->
    <bean id="commentSerializer"
          class="com.h13.slg.cache.service.FastJsonRedisSerializer">
        <constructor-arg type="java.lang.Class" value="com.h13.slg.cache.co.CommentCO"/>
    </bean>
    <bean id="commentCOTemplate" class="org.springframework.data.redis.core.RedisTemplate"
          p:connection-factory-ref="jedisConnectionFactory" p:keySerializer-ref="redisStringRedisSerializer"
          p:valueSerializer-ref="commentSerializer">
    </bean>

</beans>