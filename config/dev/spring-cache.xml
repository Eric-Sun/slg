<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jedisConnectionFactory"
          class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory"
          p:host-name="${redis.ip}" p:port="${redis.port}" p:use-pool="true"/>

    <bean id="redisStringRedisSerializer"
          class="com.h13.slg.core.FastJsonRedisSerializer">
        <constructor-arg type="java.lang.Class" value="java.lang.String"/>
    </bean>

    <bean id="redisLongRedisSerializer"
          class="com.h13.slg.core.FastJsonRedisSerializer">
        <constructor-arg type="java.lang.Class" value="java.lang.Long"/>
    </bean>

    <!-- waitingEvent -->
    <bean id="waitingEventSerializer"
          class="com.h13.slg.core.FastJsonRedisSerializer">
        <constructor-arg type="java.lang.Class" value="com.h13.slg.core.cache.co.WaitingEventCO"/>
    </bean>
    <bean id="waitingEventTemplate" class="org.springframework.data.redis.core.RedisTemplate"
          p:connection-factory-ref="jedisConnectionFactory" p:keySerializer-ref="redisStringRedisSerializer"
          p:valueSerializer-ref="waitingEventSerializer">
    </bean>



   <!-- userLevelTemplate -->
    <bean id="userLevelSerializer"
          class="com.h13.slg.core.FastJsonRedisSerializer">
        <constructor-arg type="java.lang.Class" value="com.h13.slg.user.co.UserLevelCO"/>
    </bean>
    <bean id="userLevelTemplate" class="org.springframework.data.redis.core.RedisTemplate"
          p:connection-factory-ref="jedisConnectionFactory" p:keySerializer-ref="redisStringRedisSerializer"
          p:valueSerializer-ref="userLevelSerializer">
    </bean>


    <!-- userStatusTemplate -->
    <bean id="userStatusSerializer"
          class="com.h13.slg.core.FastJsonRedisSerializer">
        <constructor-arg type="java.lang.Class" value="com.h13.slg.user.co.UserStatusCO"/>
    </bean>
    <bean id="userStatusTemplate" class="org.springframework.data.redis.core.RedisTemplate"
          p:connection-factory-ref="jedisConnectionFactory" p:keySerializer-ref="redisStringRedisSerializer"
          p:valueSerializer-ref="userLevelSerializer">
    </bean>
</beans>